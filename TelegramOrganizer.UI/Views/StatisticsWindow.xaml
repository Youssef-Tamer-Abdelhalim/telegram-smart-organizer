<Window x:Class="TelegramOrganizer.UI.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TelegramOrganizer.UI.Views"
        Title="Statistics Dashboard" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <local:CountToHeightConverter x:Key="CountToHeight" MaxHeight="80"/>
        
        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="CardTitle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="BigNumber">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#007ACC"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20,15">
            <Grid>
                <StackPanel>
                    <TextBlock Text="Statistics Dashboard" 
                               Foreground="White" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Organization metrics and insights" 
                               Foreground="#C8E6C9" FontSize="12" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Refresh" Command="{Binding RefreshCommand}"
                            Background="Transparent" Foreground="White" BorderBrush="White"
                            Padding="15,8" Margin="0,0,10,0" Cursor="Hand"/>
                    <Button Content="Clear All" Command="{Binding ClearStatsCommand}"
                            Background="Transparent" Foreground="White" BorderBrush="White"
                            Padding="15,8" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Summary Cards -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Files -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Total Files Organized" Style="{StaticResource CardTitle}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalFilesOrganized}" Style="{StaticResource BigNumber}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="files" Foreground="#888" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Size -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Total Size Organized" Style="{StaticResource CardTitle}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalSizeFormatted}" Style="{StaticResource BigNumber}"
                                       HorizontalAlignment="Center" Foreground="#4CAF50"/>
                            <TextBlock Text="transferred" Foreground="#888" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Middle Row -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Top Groups -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Top Groups" Style="{StaticResource CardTitle}"/>
                            <ItemsControl ItemsSource="{Binding TopGroups}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="25"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="{Binding Rank}" 
                                                       Foreground="#888" FontWeight="Bold"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Count}" 
                                                       Foreground="#007ACC" FontWeight="SemiBold"
                                                       HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="3" Foreground="#888" FontSize="11"
                                                       HorizontalAlignment="Right">
                                                <Run Text="{Binding Percentage, StringFormat={}{0:0.0}}"/>
                                                <Run Text="%"/>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <TextBlock Text="No data yet" Foreground="#888" FontStyle="Italic"
                                       Margin="0,10,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TopGroups.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- File Types -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="File Types" Style="{StaticResource CardTitle}"/>
                            <ItemsControl ItemsSource="{Binding FileTypes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="{Binding Extension}" 
                                                       FontFamily="Consolas" Foreground="#E91E63"/>
                                            
                                            <!-- Progress Bar -->
                                            <Grid Grid.Column="1" Margin="10,0">
                                                <Border Background="#E0E0E0" Height="8" CornerRadius="4"/>
                                                <Border Background="#4CAF50" Height="8" CornerRadius="4"
                                                        HorizontalAlignment="Left"
                                                        Width="{Binding Percentage, Converter={StaticResource CountToHeight}}"/>
                                            </Grid>
                                            
                                            <TextBlock Grid.Column="2" Text="{Binding Count}" 
                                                       Foreground="#666" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <TextBlock Text="No data yet" Foreground="#888" FontStyle="Italic"
                                       Margin="0,10,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding FileTypes.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Daily Activity -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Last 7 Days Activity" Style="{StaticResource CardTitle}"/>
                        
                        <ItemsControl ItemsSource="{Binding DailyActivity}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Center" Margin="5">
                                        <!-- Bar Container -->
                                        <Border Width="40" Height="80" VerticalAlignment="Bottom">
                                            <Border Background="#007ACC" CornerRadius="4,4,0,0"
                                                    VerticalAlignment="Bottom"
                                                    Height="{Binding Count, Converter={StaticResource CountToHeight}}"/>
                                        </Border>
                                        
                                        <!-- Count -->
                                        <TextBlock Text="{Binding Count}" HorizontalAlignment="Center"
                                                   FontWeight="Bold" Foreground="#007ACC" Margin="0,5,0,0"/>
                                        
                                        <!-- Day -->
                                        <TextBlock Text="{Binding DayName}" HorizontalAlignment="Center"
                                                   Foreground="#666" FontSize="11"/>
                                        <TextBlock Text="{Binding Date}" HorizontalAlignment="Center"
                                                   Foreground="#999" FontSize="10"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <TextBlock VerticalAlignment="Center" Foreground="#666" FontSize="12">
                    <Run Text="Last updated:"/>
                    <Run Text="{Binding LastUpdated}" FontWeight="SemiBold"/>
                </TextBlock>
                <Button Content="Close" HorizontalAlignment="Right" 
                        Padding="20,8" Click="CloseButton_Click"
                        Background="#666" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>
