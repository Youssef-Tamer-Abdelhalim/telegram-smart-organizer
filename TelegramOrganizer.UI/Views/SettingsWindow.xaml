<Window x:Class="TelegramOrganizer.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - Telegram Smart Organizer" 
        Height="600" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Paths Settings -->
                <GroupBox Header="?? Folder Paths">
                    <StackPanel>
                        <TextBlock Text="Destination Folder:" FontWeight="SemiBold"/>
                        <Grid Margin="0,5,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding DestinationBasePath, UpdateSourceTrigger=PropertyChanged}" 
                                     IsReadOnly="True" Grid.Column="0" Margin="0,0,5,0"/>
                            <Button Content="Browse..." Command="{Binding BrowseDestinationCommand}" 
                                    Grid.Column="1" Width="80"/>
                        </Grid>

                        <TextBlock Text="Downloads Folder:" FontWeight="SemiBold"/>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding DownloadsFolderPath, UpdateSourceTrigger=PropertyChanged}" 
                                     IsReadOnly="True" Grid.Column="0" Margin="0,0,5,0"/>
                            <Button Content="Browse..." Command="{Binding BrowseDownloadsCommand}" 
                                    Grid.Column="1" Width="80"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Cleanup Settings -->
                <GroupBox Header="?? Cleanup">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Retention Period:" Style="{StaticResource LabelStyle}" Grid.Column="0"/>
                            <TextBox Text="{Binding RetentionDays, UpdateSourceTrigger=PropertyChanged}" 
                                     Grid.Column="1" HorizontalContentAlignment="Center"/>
                            <TextBlock Text="days" VerticalAlignment="Center" Margin="5,0,0,0" Grid.Column="2"/>
                        </Grid>
                        <TextBlock Text="Old pending downloads will be cleaned automatically" 
                                   Foreground="Gray" FontSize="11" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Behavior Settings -->
                <GroupBox Header="?? Behavior">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding StartMinimized}" 
                                  Content="Start minimized"/>
                        <CheckBox IsChecked="{Binding MinimizeToTray}" 
                                  Content="Minimize to system tray"/>
                        <CheckBox IsChecked="{Binding ShowNotifications}" 
                                  Content="Show notifications when files are organized"/>
                        <CheckBox IsChecked="{Binding RunOnStartup}" 
                                  Content="Run on Windows startup"/>
                    </StackPanel>
                </GroupBox>

                <!-- Appearance Settings -->
                <GroupBox Header="?? Appearance">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding UseDarkTheme}" 
                                  Content="Use dark theme (requires restart)"/>
                    </StackPanel>
                </GroupBox>

                <!-- Info -->
                <Border Background="#F0F8FF" BorderBrush="#B0D4F1" BorderThickness="1" 
                        Padding="10" CornerRadius="3">
                    <StackPanel>
                        <TextBlock Text="?? Information" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock TextWrapping="Wrap" Foreground="#555">
                            Settings are saved to:
                            <LineBreak/>
                            <Run FontFamily="Consolas" FontSize="10">%LOCALAPPDATA%\TelegramOrganizer\settings.json</Run>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Reset to Defaults" Command="{Binding ResetCommand}" 
                    Grid.Column="1" Width="120" Margin="0,0,10,0" 
                    Background="#FFFAF0" BorderBrush="#FFB366"/>
            
            <Button Content="Save" Command="{Binding SaveCommand}" 
                    Grid.Column="2" Width="100" Margin="0,0,10,0" 
                    Background="#E8F5E9" BorderBrush="#4CAF50" FontWeight="SemiBold"/>
            
            <Button Content="Close" Click="Close_Click" 
                    Grid.Column="3" Width="100"/>
        </Grid>
    </Grid>
</Window>
