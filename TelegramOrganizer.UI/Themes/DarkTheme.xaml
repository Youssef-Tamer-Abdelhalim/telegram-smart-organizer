<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->
    
    <!-- Background Colors -->
    <Color x:Key="WindowBackgroundColor">#1E1E1E</Color>
    <Color x:Key="CardBackgroundColor">#2D2D2D</Color>
    <Color x:Key="HeaderBackgroundColor">#0078D4</Color>
    
    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#E0E0E0</Color>
    <Color x:Key="SecondaryTextColor">#A0A0A0</Color>
    <Color x:Key="HeaderTextColor">#FFFFFF</Color>
    <Color x:Key="AccentTextColor">#60CDFF</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderColor">#404040</Color>
    <Color x:Key="FocusBorderColor">#60CDFF</Color>
    
    <!-- Button Colors -->
    <Color x:Key="ButtonBackgroundColor">#0078D4</Color>
    <Color x:Key="ButtonHoverColor">#1E90FF</Color>
    <Color x:Key="ButtonTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryButtonBackgroundColor">#3D3D3D</Color>
    <Color x:Key="SecondaryButtonTextColor">#E0E0E0</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FFB300</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="InfoColor">#29B6F6</Color>
    
    <!-- Input Colors -->
    <Color x:Key="InputBackgroundColor">#3D3D3D</Color>
    <Color x:Key="InputBorderColor">#505050</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>
    
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="{StaticResource HeaderTextColor}"/>
    <SolidColorBrush x:Key="AccentTextBrush" Color="{StaticResource AccentTextColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource FocusBorderColor}"/>
    
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}"/>
    <SolidColorBrush x:Key="ButtonTextBrush" Color="{StaticResource ButtonTextColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="{StaticResource SecondaryButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonTextBrush" Color="{StaticResource SecondaryButtonTextColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="{StaticResource InputBorderColor}"/>

</ResourceDictionary>
