<Window x:Class="TelegramOrganizer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Telegram Smart Organizer" Height="550" Width="650"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">

    <Window.Resources>
        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" 
                                      Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header - Clean without buttons -->
        <Border Grid.Row="0" Background="#007ACC" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Telegram Smart Organizer" 
                           Foreground="White" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="Context-aware file organization" 
                           Foreground="#B3D9FF" FontSize="12" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Status Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Active Window Detection" Style="{StaticResource HeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Current Window:" Foreground="#666"/>
                                <TextBlock Text="{Binding CurrentWindowTitle}" 
                                           Style="{StaticResource ValueStyle}"
                                           Foreground="#007ACC" TextWrapping="Wrap"
                                           MaxWidth="400"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Process:" Foreground="#666" FontSize="11"/>
                                <TextBlock Text="{Binding ProcessName}" 
                                           Foreground="#4CAF50" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Activity Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Activity Log" Style="{StaticResource HeaderStyle}"/>
                        
                        <Border Background="#1E1E1E" BorderBrush="#333" 
                                BorderThickness="1" Padding="12" CornerRadius="4"
                                MinHeight="60">
                            <TextBlock Text="{Binding LastLog}" 
                                       Foreground="#00FF00" 
                                       FontFamily="Consolas" 
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Quick Actions Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" Style="{StaticResource HeaderStyle}"/>
                        
                        <WrapPanel>
                            <Button Content="View Statistics" 
                                    Command="{Binding OpenStatisticsCommand}"
                                    Margin="0,0,10,10" Padding="15,10"
                                    Background="#4CAF50" Foreground="White" 
                                    BorderThickness="0" Cursor="Hand"/>
                            
                            <Button Content="Manage Rules" 
                                    Command="{Binding OpenRulesCommand}"
                                    Margin="0,0,10,10" Padding="15,10"
                                    Background="#FF9800" Foreground="White" 
                                    BorderThickness="0" Cursor="Hand"/>
                            
                            <Button Content="Open Logs" 
                                    Command="{Binding OpenLogFileCommand}"
                                    Margin="0,0,10,10" Padding="15,10"
                                    Background="#607D8B" Foreground="White" 
                                    BorderThickness="0" Cursor="Hand"/>
                            
                            <Button Content="Settings" 
                                    Command="{Binding OpenSettingsCommand}"
                                    Margin="0,0,10,10" Padding="15,10"
                                    Background="#9C27B0" Foreground="White" 
                                    BorderThickness="0" Cursor="Hand"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- How It Works Card -->
                <Border Background="#E8F5E9" BorderBrush="#A5D6A7" 
                        BorderThickness="1" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="How It Works" FontWeight="Bold" 
                                   Foreground="#2E7D32" Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" Foreground="#555" LineHeight="22" FontSize="13">
                            <Run FontWeight="SemiBold">1.</Run>
                            <Run Text=" Open Telegram and go to a chat/channel"/>
                            <LineBreak/>
                            <Run FontWeight="SemiBold">2.</Run>
                            <Run Text=" Start downloading a file (keep Telegram focused!)"/>
                            <LineBreak/>
                            <Run FontWeight="SemiBold">3.</Run>
                            <Run Text=" The app captures the chat name automatically"/>
                            <LineBreak/>
                            <Run FontWeight="SemiBold">4.</Run>
                            <Run Text=" File is organized into the detected group folder"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" Padding="20,10">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Fill="#4CAF50" Margin="0,0,8,0"/>
                    <TextBlock Text="Watching for downloads..." Foreground="#666" FontSize="12"/>
                </StackPanel>

                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"
                           Foreground="#999" FontSize="11">
                    <Run Text="Minimize to hide in system tray"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>